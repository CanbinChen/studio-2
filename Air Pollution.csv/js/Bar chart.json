{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Countries PM2.5" },
  "data": {
    "url": "https://raw.githubusercontent.com/CanbinChen/studio-2/main/Air%20Pollution.csv/data/Region%20PM2.5.csv"
    },
    "selection": {
    "continent_highlight": {
      "type": "multi",
      "fields": ["Year"],
      "bind": "legend"
      }
    },

  "mark": "bar",
  "encoding": {
    "x": {"field":"Air","type": "quantitative"},
    "y": { "field": "Region", "type": "nominal","sort":"-x"},
    "tooltip": [
      {"field": "Region", "type": "nominal", "title":"Region"},
      {"field": "Air", "type": "quantitative", "title": "PM2.5 Level"}
  ],
    "color":{
      "field":"Year"
      
    },
    "opacity": {
        "condition": {"selection": "continent_highlight", "value": 1.0},"value": 0.3
    }
    
    }
    

    

}